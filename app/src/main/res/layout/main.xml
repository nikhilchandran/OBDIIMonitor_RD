<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="20dp"

        android:layout_weight=".5"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Speed (Kmph)"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/MPHView"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:text="RPM"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/RPMView"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Engine Load"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/LoadView"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:textSize="22sp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="Battery Voltage"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/voltView"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:textSize="22sp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Coolant Temperature"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/CoolantView"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:textSize="22sp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Intake Temperature"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/IntakeView"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>





